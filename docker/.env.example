##########################
# Discord Bot
##########################
# Für grundlegende Bot-Funktion (Server-Bots reicht)
DISCORD_BOT_TOKEN=your_discord_bot_token

# Optional, nur nötig für globale Slash Commands / OAuth
DISCORD_BOT_CLIENT_ID=your_client_id
DISCORD_BOT_CLIENT_SECRET=your_client_secret

##########################
# Twitch Bot
##########################
# Kanal, in dem der Bot aktiv ist
TWITCH_CHANNEL=your_channel

# Client ID + Secret für API-Requests
TWITCH_BOT_CLIENT_ID=your_client_id
TWITCH_BOT_CLIENT_SECRET=your_client_secret

##########################
# Redis
##########################
REDIS_HOST=redis
REDIS_PORT=6379

##########################
# Database (optional / Dev)
##########################
DB_HOST=localhost
DB_PORT=5432
DB_USER=dev_user
DB_PASSWORD=dev_secret
DB_NAME=bot_dev_db
